{
    "name": "phauthentic/validator",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Phauthentic\\Validator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Phauthentic\\Test\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Florian Kr√§mer"
        }
    ],
    "require": {
        "php": "8.*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpbench/phpbench": "^1.2",
        "phpmd/phpmd": "^2.13",
        "phpstan/phpstan": "^1.9",
        "phpunit/phpunit": "^9.6",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "suggest": {
        "symfony/yaml": "Required if you want to load from Yaml files."
    },
    "config": {
        "sort-packages": true,
        "bin-dir": "bin"
    },
    "scripts": {
        "phpcbf": "bin/phpcbf --standard=phpcs.xml src/ tests/",
        "phpcs": "bin/phpcbf && bin/phpcs --version && bin/phpcs --standard=phpcs.xml src/ tests/",
        "phpstan": "bin/phpstan",
        "phpunit": "bin/phpunit",
        "analyze": "composer phpcbf && composer phpcs && composer phpstan && composer phpunit"
    }
}
